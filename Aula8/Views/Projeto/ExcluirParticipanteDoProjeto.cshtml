@model Aula8.Models.Usuario

@{
    ViewBag.Title = "ExcluirParticipanteDoProjeto";
}

<h2>Excluir Participante Do Projeto</h2>

<h3>Voce tem certeza que deseja excluir esse Participante?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cargo)
        </dd>

    </dl>
    @{
        int? idProjeto = 0;
        foreach (var item in Model.Projetos)
        {
            idProjeto = item.Id;
        }
        <h1>@Model.Id</h1>
        <h1>@idProjeto</h1>
    }
    <div class="form-actions no-color">
        @Html.ActionLink("Deletar", "ExcluirParticipanteComSucesso", new { id = Model.Id, idProjeto = idProjeto })
    </div>
</div>
